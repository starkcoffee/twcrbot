= form_for @code_submission do |f|
  -if @code_submission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@code_submission.errors.count, "error")} prohibited this code_submission from being saved:"
      %ul
        - @code_submission.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :applicant_name
    = f.text_field :applicant_name
  .field
    = f.label :language
    = f.text_field :language
  .field
    = f.label :problem
    = f.text_field :problem
  .actions
    = f.submit 'Save'
